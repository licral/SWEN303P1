extends ../node_modules/jade-bootstrap/_bootstrap

block body
	if display !== "raw"
		+navbar("Colenso Project", "dropdown_menu")
			+nav_item("/") Home
			+nav_item("/browse", "active") Browse
			+nav_item("/upload") Upload
		.container
			h1 #{title}
			if display === "browse"
				p Enter XQUERY or FULL-TEXT search here:
				form(action="/browse", method="get")
					+input-group("","")
						+input("text","queryfield","Enter XQUERY here","XQUERY Search", "queryfield")
						+input("text","fullfield","Enter FULL-TEXT here","FULL-TEXT Search", "fullfield")
						+submit("Register")
			+panel-default(type)
				each item in place
					if type === "Browse" && display === "browse"
						p #[a(href="browse/display/#{item}") !{item}] #[a(href="browse/raw-display/#{item}") Raw Text]
					else
						p !{item}
	else
		each item in place
			p #{item}